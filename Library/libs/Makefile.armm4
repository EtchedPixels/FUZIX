SRC_LM += cbrt.c ceil.c copysign.c erf.c exp.c expm1.c
SRC_LM += fabs.c fdim.c floor.c fmax.c fmin.c fmod.c frexp.c
SRC_LM += hypot.c j0.c j1.c jn.c
