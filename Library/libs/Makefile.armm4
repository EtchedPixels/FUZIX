CC = arm-none-eabi-gcc
AR = arm-none-eabi-ar
PLATFORM = armm4
export PLATFORM
CC_OPT = -DUSE_SYSMALLOC -mcpu=cortex-m4 -mtune=cortex-m4 -march=armv7e-m+nofp -mthumb -fpie -DPIE -ffunction-sections -fdata-sections -fno-strict-aliasing -fno-builtin -Wall -g -Os -c -I../include -I../include/armm4
ASM_OPT = -g -xassembler-with-cpp -DUSE_AOUT
# copied in from kernel tree
KRN_HEADERS = userstructs.h
KRN_HEADERS_SRC = $(addprefix ../../Kernel/include/,$(KRN_HEADERS))
KRN_HEADERS_COPY = $(addprefix ../include/sys/,$(KRN_HEADERS))
SRC_CRT0 = crt0_armm4.S crt0nostdio_armm4.S
OBJ_CRT0 = $(SRC_CRT0:.S=.o)
SRC_ASM = setjmp_armm0.S longjmp_armm0.S helpers_armm0.S
OBJ_ASM = $(SRC_ASM:.S=.o)
