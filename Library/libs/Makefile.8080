ASM = cc85
AR = ar
PLATFORM = 8080
export PLATFORM
CC_OPT = -c -I$(shell pwd)/../include -I$(shell pwd)/../include/8080 -X -Os
ASM_OPT = -c -o
# copied in from kernel tree
