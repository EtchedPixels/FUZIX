; UZI mnemonics for memory addresses etc

U_DATA                      equ 0x7E00       ; (this is struct u_data from kernel.h)
U_DATA__TOTALSIZE           equ 0x0200        ; 256+256+256 bytes.


SAM_USER macro
	sta 0xFFD4
	endm

SAM_KERNEL macro
	sta 0xFFD5
	endm

SAM_SAVE macro
	ldy 4
	endm

SAM_RESTORE macro
	sta ,y
	endm

